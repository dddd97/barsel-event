<div class="new-event">
  <h1>Buat Event Baru</h1>

  <%= form_with(model: @event, local: true) do |f| %>
    <% if @event.errors.any? %>
      <div class="error-messages" style="color: red; margin-bottom: 20px;">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group" style="margin-bottom: 20px;">
      <%= f.label :name, "Nama Event" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
      <%= f.label :category, "Kategori" %>
      <%= f.select :category, 
          options_for_select([
            ["Event Utama", "main"],
            ["Event Reguler", "regular"]
          ], selected: @event.category || "regular"),
          {}, 
          class: "form-control" 
      %>
      <small class="form-text text-muted">Event utama akan ditampilkan di bagian atas daftar.</small>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
      <%= f.label :event_date, "Tanggal Event" %>
      <%= f.date_field :event_date, class: "form-control" %>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
      <%= f.label :description, "Deskripsi" %>
      <%= f.text_area :description, class: "form-control", rows: 5 %>
    </div>

    <div class="form-actions">
      <%= f.submit "Simpan Event", class: "button-primary" %>
      <%= link_to "Kembali", events_path, class: "button-secondary" %>
    </div>
  <% end %>
</div>

<style>
  .new-event {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: 500;
    color: #333;
  }

  .form-control {
    width: 100%;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 16px;
  }

  .form-text {
    font-size: 0.875em;
    color: #6c757d;
    margin-top: 5px;
  }

  .button-primary {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }

  .button-primary:hover {
    background-color: #0056b3;
  }

  .button-secondary {
    background-color: #6c757d;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    display: inline-block;
    margin-left: 10px;
  }

  .button-secondary:hover {
    background-color: #5a6268;
    text-decoration: none;
    color: white;
  }

  .error-messages {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: 4px;
    padding: 15px;
    margin-bottom: 20px;
  }

  .error-messages h2 {
    color: #721c24;
    font-size: 18px;
    margin-bottom: 10px;
  }

  .error-messages ul {
    margin: 0;
    padding-left: 20px;
  }

  .error-messages li {
    color: #721c24;
  }
</style> 