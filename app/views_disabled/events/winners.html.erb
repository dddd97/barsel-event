<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Daftar Pemenang <%= @event.name %></h1>
    <%= link_to "Download PDF", winners_event_path(@event, format: :pdf), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <div class="mb-4">
      <p class="text-gray-600">Tanggal Event: <%= @event.event_date&.strftime('%d %B %Y') %></p>
    </div>

    <div class="space-y-4">
      <% @prizes.each_with_index do |prize, index| %>
        <div class="border-b pb-4 last:border-b-0">
          <h3 class="text-lg font-semibold"><%= index + 1 %>. <%= prize.name %></h3>
          <% prize.winnings.includes(:participant).each do |winning| %>
            <div class="ml-6 mt-2">
              <p class="text-gray-700">Pemenang: <%= winning.participant.name %></p>
              <p class="text-gray-600">Nomor Peserta: <%= winning.participant.registration_number %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "Kembali", event_path(@event), class: "text-blue-500 hover:text-blue-700" %>
  </div>
</div> 