<%= form_with(model: [:admin_panel, event], class: "space-y-6") do |f| %>
  <% if event.errors.any? %>
    <div class="bg-red-50 p-4 rounded-lg">
      <h2 class="text-red-800 text-sm font-medium"><%= pluralize(event.errors.count, "error") %> ditemukan:</h2>
      <ul class="mt-2 text-red-700 text-sm list-disc list-inside">
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :name, "Nama Event", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :description, "Deskripsi", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :banner, "Banner Event", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1 flex items-center space-x-4">
        <% if event.banner.attached? && event.persisted? %>
          <div class="relative">
            <% banner_url = event.banner_url %>
            <% if banner_url.present? %>
              <%= image_tag banner_url, class: "h-32 w-auto object-cover rounded-lg" %>
              <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 hover:opacity-100 transition-opacity rounded-lg">
                <span class="text-white text-sm">Ganti Banner</span>
              </div>
            <% else %>
              <div class="h-32 w-32 flex items-center justify-center bg-gray-100 rounded-lg">
                <span class="text-gray-400">Banner tidak tersedia</span>
              </div>
            <% end %>
          </div>
        <% end %>
        <div class="flex-1">
          <%= f.file_field :banner, 
              class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100",
              accept: "image/png,image/jpeg" %>
          <p class="mt-1 text-sm text-gray-500">
            PNG atau JPEG (Maks. 5MB)
          </p>
        </div>
      </div>
    </div>

    <div>
      <%= f.label :event_date, "Tanggal Event", class: "block text-sm font-medium text-gray-700" %>
      <%= f.datetime_local_field :event_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :location, "Lokasi", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :location, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div class="border-t border-gray-200 pt-4 mt-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Contact Person</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div>
          <%= f.label :contact_person1_name, "Nama Contact Person 1", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :contact_person1_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <div>
          <%= f.label :contact_person1_phone, "No. Telepon Contact Person 1", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :contact_person1_phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= f.label :contact_person2_name, "Nama Contact Person 2", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :contact_person2_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <div>
          <%= f.label :contact_person2_phone, "No. Telepon Contact Person 2", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :contact_person2_phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>
    </div>

    <div>
      <%= f.label :category, "Kategori", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :category, 
          options_for_select([
            ["Event Utama", "utama"],
            ["Event Reguler", "reguler"]
          ], event.category),
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :max_participants, "Batas Jumlah Peserta", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :max_participants, 
          min: 1,
          placeholder: "Kosongkan jika tidak ada batasan",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      <p class="mt-1 text-sm text-gray-500">Biarkan kosong jika tidak ingin membatasi jumlah peserta</p>
    </div>

    <div class="border-t border-gray-200 pt-4">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Periode Pendaftaran</h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= f.label :registration_start, "Waktu Pembukaan", class: "block text-sm font-medium text-gray-700" %>
          <%= f.datetime_local_field :registration_start, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :registration_end, "Waktu Penutupan", class: "block text-sm font-medium text-gray-700" %>
          <%= f.datetime_local_field :registration_end, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Batal", admin_panel_events_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= f.submit event.persisted? ? "Perbarui Event" : "Buat Event", class: "inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %> 